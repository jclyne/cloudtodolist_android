<resources>
    <style name="todolist_layout">
        <item name="android:background">@drawable/todolist_background</item>
    </style>

    <style name="todolist_entry_layout">
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="todolist_label_text">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="todolist_entry">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="todolist_entry_text" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="todolist_entry_text_complete" parent="@android:style/TextAppearance">
        <item name="android:textColor">#A9A9A9</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="todolist_notes_text" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="todolist_entry_checkbox">

    </style>

    <style name="todolist_new_entry" parent="@android:style/TextAppearance">
        <item name="android:textAppearance">@style/todolist_new_entry_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="todolist_new_entry_text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColorHint">#E0E0E0</item>
    </style>

    <style name="todolist_listview">
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="edit_entry_layout">
        <item name="android:background">@drawable/edit_entry_background</item>
    </style>


    <style name="preference_screen">
        <item name="android:windowBackground">@drawable/todolist_background</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>